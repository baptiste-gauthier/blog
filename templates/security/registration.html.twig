{% extends 'base.html.twig' %}

{% block body %}

<h1>Inscription</h1>

{{ form_start(form) }}

{{ form_row(form.email, {"attr" : {"placeholder" : "Email"}}) }}
{{ form_row(form.username, {"label" : "Nom d'utilisateur" ,"attr" : {"placeholder" : "Nom"}}) }}
{{ form_row(form.password, {"label" : "Mot de passe" ,"attr" : {"placeholder" : "Mot de passe"}}) }}
{{ form_row(form.confirm_pass, {"label" : "Confirmation mot de passe", "attr" : {"placeholder" : "Confirmer le mot de passe"}}) }}

<input type="submit" class="btn btn-success" value="S'inscrire">

{{ form_end(form) }}

{% endblock %}